<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/g5261"

        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:focusable="true" />

    <Button
        android:text="PLAY"
        android:layout_width="165dp"
        android:layout_height="80dp"
        android:id="@+id/botonplay"
        android:background="@drawable/botonplay"
        android:layout_marginTop="27dp"
        android:layout_weight="1"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Options"
        android:layout_width="165dp"
        android:layout_height="80dp"
        android:id="@+id/button3"
        android:background="@drawable/botonplay"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/botonplay"
        android:layout_alignEnd="@+id/botonplay" />

    <Button
        android:text="Arcades"
        android:layout_width="165dp"
        android:layout_height="80dp"
        android:id="@+id/button4"
        android:background="@drawable/botonplay"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/botonplay"
        android:layout_alignStart="@+id/botonplay"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/button6"
        android:background="@drawable/g7169"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="70dp"
        android:layout_height="60dp" />

</RelativeLayout>