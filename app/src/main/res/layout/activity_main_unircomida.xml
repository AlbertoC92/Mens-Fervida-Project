<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondoprincipal_unircomida"
    tools:context="dam.riberadeltajo.alber.mens_fervida_videogame.juegoUnirComida.MainActivityUnirComida">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <Space
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/btnJugar"
                android:background="@mipmap/botonunircomida"
                android:onClick="abrirJugar"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="@android:color/white"
                android:layout_weight="0.25"
                android:text="@string/jugar" />

            <Space
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <Space
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/btnInstrucciones"
                android:background="@mipmap/botonunircomida"
                android:onClick="abrirInstrucciones"
                android:layout_weight="0.12"
                android:text="@string/instrucciones"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Space
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28" />
            <Button

                android:id="@+id/btnRecord"
                android:background="@mipmap/botonunircomida"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="abrirRecord"
                android:text="@string/record"
                android:textColor="@android:color/white"
                android:textSize="24dp" />

            <Space
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
