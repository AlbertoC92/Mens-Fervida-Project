<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ventanaopciones"
    android:weightSum="1"
    android:id="@+id/rl_main">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="1">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:weightSum="14">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/boton_1"
                    android:id="@+id/ima_pos1"
                    android:layout_weight="2" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@drawable/backtexto"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/txt_user1"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/tamano_text_normal" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/txt_punt1"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/tamano_texto_boton" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/boton_2"
                    android:id="@+id/img_pos2"
                    android:layout_weight="2" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@drawable/backtexto"
                    android:weightSum="1"
                    android:gravity="center">
                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/txt_user2"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/tamano_texto_boton" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/txt_punt2"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/tamano_texto_boton" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/boton_3"
                    android:id="@+id/img_pos3"
                    android:layout_weight="2" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@drawable/backtexto"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/txt_user3"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/tamano_texto_boton" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/txt_punt3"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/tamano_texto_boton" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/boton_num_4"
                    android:id="@+id/img_pos4"
                    android:layout_weight="2" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@drawable/backtexto"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/txt_user4"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/tamano_texto_boton" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/txt_punt4"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/tamano_texto_boton" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/boton_5"
                    android:id="@+id/img_pos5"
                    android:layout_weight="2" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@drawable/backtexto"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/txt_user5"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/tamano_texto_boton" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/txt_punt5"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/tamano_texto_boton" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />
</LinearLayout>

