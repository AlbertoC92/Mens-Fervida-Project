<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_comida_cae"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dam.riberadeltajo.alber.mens_fervida_videogame.juegoComidaCae.MainActivityComidaCae"
    android:orientation="vertical"
    android:background="@drawable/cc_fondo_res"
    android:weightSum="10">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:weightSum="10">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/cc_fondo_niveles">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5" />

                        <TextView
                            android:text="@string/instrucciones_juego"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView19"
                            android:layout_weight="0.5"
                            android:textAlignment="center"
                            android:textSize="@dimen/tamano_texto_titulos"
                            android:fontFamily="sans-serif-smallcaps" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:weightSum="10">

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5" />

                            <ScrollView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="6.6">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6.5"
                                    android:weightSum="10">

                                    <TextView
                                        android:text="@string/inst_comidaCae"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView23"
                                        android:layout_weight="8"
                                        android:textAlignment="center"
                                        android:fontFamily="monospace"
                                        android:textSize="@dimen/tamano_text_normal" />
                                </LinearLayout>
                            </ScrollView>

                            <Space
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:layout_width="wrap_content" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:weightSum="10">

                            <Space
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_width="0dp" />

                            <TextView
                                android:text="@string/record"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/textView20"
                                android:layout_weight="3.5"
                                android:textSize="@dimen/tamano_text_normal"
                                android:textAlignment="viewEnd" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/txtComidaCaeRecord"
                                android:layout_weight="4"
                                android:textSize="@dimen/tamano_text_normal"
                                android:fontFamily="sans-serif"
                                android:text="0"
                                android:textAlignment="center"
                                android:textStyle="normal|bold" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:weightSum="10">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/btSalirComidaCae"
                        android:layout_weight="3.5"
                        android:background="@drawable/boton_rojo_volver"
                        android:layout_margin="10dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/btJugarComCae"
                        android:layout_weight="3.5"
                        android:background="@drawable/btn_aceptar"
                        android:layout_margin="10dp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
